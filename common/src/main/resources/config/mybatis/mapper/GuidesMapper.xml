<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.decade.gas.mapper.index.PowersMapper">

    <resultMap id="resultPowers" type="org.decade.gas.entity.index.PowersEntity">
        <result property="powerId" column="power_id" javaType="java.lang.String"/>
        <result property="departmentId" column="department_id" javaType="java.lang.String"/>
        <result property="publishTime" column="publish_time" javaType="java.lang.String"/>
        <result property="updateTime" column="update_time" javaType="java.lang.String"/>
        <result property="createTime" column="create_time" javaType="java.lang.String"/>
    </resultMap>
    <select id="listAll" resultMap="resultPowers">
        SELECT
            id,
            power_id,
            department_id,
            title,
            content,
            state,
            publish_time,
            update_time,
            create_time
        FROM f_f_powers
        WHERE state = 1
        ORDER BY publish_time DESC
    </select>
    <select id="search" resultMap="resultPowers">
        SELECT
        id,
        power_id,
        department_id,
        title,
        content,
        state,
        publish_time,
        update_time,
        create_time
        FROM f_f_powers
        WHERE state=1
        <if test="powerId != null">AND power_id=#{powerId}</if>
        <if test="departmentId != null">AND department_id=#{departmentId}</if>
        <if test="title != null">AND title LIKE #{title}</if>
        ORDER BY publish_time DESC
    </select>
    <select id="searchList" resultMap="resultPowers">
        SELECT
            id,
            power_id,
            department_id,
            title,
            content,
            state,
            publish_time,
            update_time,
            create_time
        FROM f_f_powers
        WHERE state = 1
        ORDER BY publish_time DESC
        LIMIT #{from}, #{to}
    </select>
    <select id="totalCount" resultType="java.lang.Integer">
        SELECT count(id)
        FROM f_f_powers
    </select>
</mapper>